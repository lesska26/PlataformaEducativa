@{
}
<link href="~/css/intituto.css" rel="stylesheet" />
<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Registrar Institucion</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" asp-controller="Instituciones">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">

                            <label asp-for="Nombre"></label>
                            <input class="form-control" asp-for="Nombre" />
                            <span asp-validation-for="Nombre"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Telefono"></label>
                            <input asp-for="Telefono" class="form-control " />
                            <span asp-validation-for="Telefono"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Municipios"></label>
                            <select class="form-control" asp-for="MunicipioSelect">

                                @foreach (var i in Model.Municipios)
                                {
                                    <option>
                                        @i.MunicipioName
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="MunicipioSelect"></span>





                        </div>

                        <div class="form-group">
                            <label asp-for="Direccion"></label>

                            <textarea class="form-control " rows="4" asp-for="Direccion" style="resize:none;"></textarea>

                            <span asp-validation-for="Direccion"></span>
                        </div>

                        <button type="submit" value="agregar institucion" class="btn btn-primary btn-block">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




