@model PlataformaEducativa.Models.ModelsView.ListUsuarioView
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<form>
   
    <input asp-for="ProfesorName" class="form-control"  disabled="true"/>
    <input asp-for="ProfesorId" type="hidden" />
    <div class="">
        <p>Cursos</p>
        <div class="cursosDiv">
       
            
                
               
                    @foreach (var f in Model.usuario_Materias.ToList())
                    {
                          <label>@f.CursosName</label>
                            
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" value="@f.CursosId" disabled="true" checked="true">
                            </div>
                            
                        
                        
                    }
                    @foreach(var f in Model.Materia.ToList())
                    {
                           <label>@f.CursosName</label>
                            
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" value="@f.CursosId" >
                            </div>
                            
                       
                    }

            
        </div>
    </div>
    <div>
        <input type="button"  class="btn btn-primary" value="Asignar"  id="asignar"/>
    </div>
</form>
<script src="/js/asignarMateria.js"></script>